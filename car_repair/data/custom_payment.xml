<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="custom_invoice_pdf_id" model="mail.template">
        <field name="name">custom.invoice.pdf.id</field>
        <field name="model">account.move</field>
        <field name="body_html" type="html">
            <xpath expr="//field[@name='report_template_ids']" position="replace">
                <field name="report_template_ids" eval="[(4, ref('account_invoices_without_payment'))]"/>
            </xpath>
        </field>
    </record>

</odoo>
