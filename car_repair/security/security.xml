<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <record id="car_repair_category" model="ir.module.category">
        <field name="name">Car Repair Category</field>
        <field name="sequence">1</field>
        <field name="description">Car Repair Category</field>
    </record>

    
    <record id="group_client" model="res.groups">
        <field name="name">Client</field>
        <field name="category_id" ref="car_repair_category"/>
    </record>

    <record id="group_worker" model="res.groups">
        <field name="name">Worker</field>
        <field name="category_id" ref="car_repair_category"/>
        <field name="implied_ids" eval="[(4,ref('group_client'))]"/>
    </record>

    <record id="group_garage" model="res.groups">
        <field name="name">Garage</field>
        <field name="category_id" ref="car_repair_category"/>
        <field name="implied_ids" eval="[(4,ref('group_worker'))]"/>
    </record>
    
</odoo>